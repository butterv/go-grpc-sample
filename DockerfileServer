# image for build
FROM 1.13.5-stretch

ENV GO111MODULE on
ENV PROJECT_ROOT /go/src/github.com/visits-works/innovators-api/
WORKDIR $PROJECT_ROOT

COPY go.mod .
COPY go.sum .
RUN go mod download

COPY . .

RUN CGO_ENABLED=0 GOOS=linux go build -a ./app/cmd/server

# image for release
FROM gcr.io/distroless/base:latest as release
ENV BUILDER_ROOT /go/src/github.com/visits-works/innovators-api/
ENV PROJECT_ROOT /
COPY --from=builder $BUILDER_ROOT/server $PROJECT_ROOT/server
COPY --from=builder $BUILDER_ROOT/.env $PROJECT_ROOT/.env
COPY --from=builder $BUILDER_ROOT/assets $PROJECT_ROOT/assets
COPY --from=builder $BUILDER_ROOT/firebase-adminsdk.json $PROJECT_ROOT/firebase-adminsdk.json
CMD ["/server"]
